{
  "name": "VKPreviewToken",
  "version": "1.0.2",
  "description": "VKPreviewToken App",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-builder start",
    "build": "electron-builder build",
    "build:win": "electron-builder build --win",
    "build:mac": "electron-builder build --mac",
    "build:linux": "electron-builder build --linux"
  },
  "author": {
    "name": "byMiroslavsky",
    "email": "programmer_js@vk.com"
  },
  "license": "ISC",
  "dependencies": {
    "axios": "^1.1.3",
    "electron-log": "^4.4.8",
    "env-paths": "^2.2.1",
    "execa": "^5.1.0",
    "graceful-fs": "^4.2.10",
    "jquery": "^3.6.1",
    "listr2": "^5.0.5",
    "lodash": "^4.17.21",
    "minimist": "^1.2.7",
    "update-electron-app": "^2.0.1",
    "vk-io": "^4.7.0"
  },
  "devDependencies": {
    "@electron/asar": "^3.2.2",
    "electron": "^21.3.0",
    "electron-builder": "^23.6.0",
    "electron-builder-squirrel-windows": "^24.0.0-alpha.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MiroslavskyCoder/VKPreviewToken.git"
  },
  "build": {
    "appId": "ru.bymiroslavsky.vkpreviewtoken",
    "productName": "VKPreviewToken",
    "copyright": "Copyright Â© 2022 ${author}",
    "files": [
      "assets",
      "src",
      "deps/app/build",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "squirrel"
        },
        {
          "target": "appx"
        }
      ],
      "icon": "./assets/icons/logo.ico"
    },
    "squirrelWindows": {
      "loadingGif": "assets/loading_squirrel.gif",
      "useAppIdAsId": true,
      "msi": true
    },
    "appx": {
      "backgroundColor": "#121212"
    },
    "directories": {
      "buildResources": "assets",
      "output": "build"
    },
    "asar": true,
    "publish": [
      {
        "provider": "github",
        "owner": "MiroslavskyCoder",
        "repo": "VKPreviewToken"
      }
    ]
  }
}
